{
  "compilerOptions": {
    "target": "es2015", // 更新为 es2015 以支持迭代器
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "downlevelIteration": true // 添加这个选项支持迭代器
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/plugins",
    "../Plugins/**/*"
  ]
}
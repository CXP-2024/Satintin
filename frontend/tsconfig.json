{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable", 
      "es6",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src", // 设置基础路径为 src 目录
    "paths": {
      "globals/*": [
        "globals/*"
      ], // Globals/* → src/Globals/*
      "Images/*": [
        "Images/*"
      ], // Images/* → src/Images/*
      "Pages/*": [
        "Pages/*"
      ], // Pages/* → src/Pages/*
      "Plugins/*": [
        "Plugins/*"
      ], // Plugins/* → src/Plugins/*
      "Styles/*": [
        "Styles/*"
      ], // Styles/* → src/Styles/*
      "Utils/*": [
        "Utils/*"
      ] // Utils/* → src/Utils/*
    }
    //"downlevelIteration": true // 添加这个选项支持迭代器
  },
  "include": [
    "src/**/*"
  ]
}
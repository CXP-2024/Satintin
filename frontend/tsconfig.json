{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable", 
      "es6",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "paths": {
      "Plugins/*": ["Plugins/*"],
      "Assets/*": ["assets/*"],
      "Pages/*": ["pages/*"],
      "Components/*": ["components/*"],
      "Utils/*": ["utils/*"],
      "Store/*": ["store/*"],
      "Globals/*": ["Globals/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}